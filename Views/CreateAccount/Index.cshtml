@*This is what the data from the for will be binding too*@
@model WeberPage.Models.Account

@{
}

<style>
    .backgroundColored {
        border-style: solid;
        background-color: whitesmoke;
    }

    .navbar {
        background-color: purple;
    }

    body {
        background-color: cornsilk;
    }

    header {
        background-color: cornsilk;
    }
</style>

<head>
    <!--this is needed for mobile formatting-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<br />

@*asp-action is what back end method will be called from the
    Controller*@
<div method="post" class="form-horizontal backgroundColored">

    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <h1>Please Enter a Username and Password!</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6 col-sm-offset-2">
            <div class="form-group has-error" asp-validation-summary="All"></div>
        </div>
    </div>

    <form asp-action="CreateUser">
        <div class="form-group row">
            <div class="col-sm-6 col-sm-offset-2">
                @*
                    This is where the data is being grabbed from
                    the "asp-for" tag helpers is what will
                    bind the data to the model
                *@
                <label asp-for="Username">Username: </label>
                <input class="form-control" asp-for="Username" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-6 col-sm-offset-2">
                <label asp-for="Password">Password: </label>
                <input class="form-control" asp-for="Password" />
            </div>
        </div>

        @*This validation form will check the values of the data passed in
            it will throw if any errors are detected*@

        <div class="form-group row">
            <div class="col-sm-6 col-sm-offset-2">
                <input type="submit" value="submit" />
            </div>
        </div>
    </form>
    <div class="form-group row">
        <div class="col-sm-6 col-sm-offset-2">
            <form method="post" asp-action="Login">
                <h3>Already Have An Account?</h3>
                <input type="submit" value="Login" />
            </form>
        </div>
    </div>
</div>

